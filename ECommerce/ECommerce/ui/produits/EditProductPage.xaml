<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ECommerce.ui.produits.EditProductPage"
             Title="Edit Product">
    <StackLayout Padding="20">
        <!-- Designation -->
        <Label Text="Product Name" FontSize="16" />
        <Entry x:Name="designationEntry" Placeholder="Enter product name" />

        <!-- Price -->
        <Label Text="Price" FontSize="16" Margin="0,10,0,0" />
        <Entry x:Name="prixEntry" Placeholder="Enter price" Keyboard="Numeric" />

        <!-- Photo URL -->
        <Label Text="Photo URL" FontSize="16" Margin="0,10,0,0" />
        <Entry x:Name="photoEntry" Placeholder="Enter photo URL" />

        <!-- Update Button -->
        <Button Text="Update Product"
                BackgroundColor="Blue"
                TextColor="White"
                Margin="20,40,20,0"
                Clicked="OnUpdateProductClicked" />
    </StackLayout>
</ContentPage>